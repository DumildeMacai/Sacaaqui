
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // ATMs: Qualquer um pode ler, apenas utilizadores autenticados podem atualizar.
    match /atms/{atmId} {
      allow read: if true;
      allow update, write: if request.auth != null;
    }
    
    // Sugestões de ATM: Apenas o criador ou o admin pode ler, 
    // apenas utilizadores autenticados podem criar, apenas o admin pode atualizar.
    match /atm_suggestions/{suggestionId} {
        allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
        allow create: if request.auth != null;
        allow update: if isAdmin();
    }

    // Utilizadores: Apenas o próprio utilizador ou o admin pode aceder.
    match /users/{userId} {
      allow read, update, write: if request.auth.uid == userId || isAdmin();
    }
    
    // Coleção de utilizadores: Apenas o admin pode listar todos os utilizadores.
    match /users/{userId} {
        allow list: if isAdmin();
    }

    // Notificações: Apenas o destinatário ou o admin pode aceder.
    match /notifications/{notificationId} {
      allow read, update, create: if request.auth != null && (request.resource.data.userId == request.auth.uid || isAdmin());
      allow list: if isAdmin();
    }
    
    // Função helper para verificar se o utilizador é um administrador.
    function isAdmin() {
      return request.auth != null && request.auth.uid == 'admin_user_id';
    }
  }
}
